<div class="form-container">
    <form action="/snippets/create-snippet" method="POST" class="snippet-form">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" required>
        <label for="snippet-content">Content</label>
        <textarea name="content" id="snippet-content" cols="300" rows="20" placeholder="Type youe code here" spellcheck="true" required></textarea>
        <input type="submit" class="btn btn-primary" value="Create">
    </form>
</div>
